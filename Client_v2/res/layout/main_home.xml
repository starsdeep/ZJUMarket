<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/banner_unit" >

        <ImageView
            android:id="@+id/iv_home_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="2dip"
            android:clickable="true"
            android:src="@drawable/booklist_menu_normal" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_weight="0.8"
            android:text="主页"
            android:textColor="#000"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dip" >

        <RelativeLayout
            android:id="@+id/icon1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/phoneicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneicon"
                android:gravity="center"
                android:text="手机数码" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/clothicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_cloth" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/clothicon"
                android:gravity="center"
                android:text="男女服装" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/bookicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_book" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bookicon"
                android:gravity="center"
                android:text="图书影音" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dip" >

        <RelativeLayout
            android:id="@+id/icon4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/shoeicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shoe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoeicon"
                android:gravity="center"
                android:text="鞋类箱包" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/jiadicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_jiadian" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jiadicon"
                android:gravity="center"
                android:text="家用电器" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/icon6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/foodicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodicon"
                android:gravity="center"
                android:text="零食特产" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/homelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:cacheColorHint="#00000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/homeprogressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>