<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_cart_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#ffefebe7">
  

    

         <ScrollView
        android:id="@+id/regist_scroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
         android:layout_below="@id/top_relative"
         android:background="#ffefebe7">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/regist_scroller_relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10.0dip" >

                <TextView
                	android:id="@+id/register_error"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textSize="24sp" >
            	</TextView>
                
                
                <TextView
                    android:id="@+id/login_page_input_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="50.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="@color/black"
                    android:text="用户名" />

                <EditText
                    android:id="@+id/login_input_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/login_page_input_name"
                    android:layout_toRightOf="@+id/login_page_input_name"
                    android:background="@drawable/edit_text_x"
                    android:hint="请输入用户名"
                    android:singleLine="true" 
                    android:editable="true"/>
                
                
                <TextView
                    android:id="@+id/login_page_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="25.0dip"
                    android:layout_below="@+id/login_page_input_name"
                    android:paddingTop="10.0dip"
                    android:textColor="@color/black"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/login_input_name"
                    android:layout_alignTop="@+id/login_page_email"
                    android:layout_toRightOf="@+id/login_page_email"
                    android:background="@drawable/edit_text_x"
                    android:hint="请输入邮箱"
                    android:singleLine="true" 
                    android:editable="true"/>
                
                
                
                
                

                <TextView
                    android:id="@+id/login_page_input_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_page_email"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="25.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="@color/black"
                    android:text="密码:" />

                <EditText
                    android:id="@+id/login_input_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/login_input_name"
                    android:layout_alignTop="@+id/login_page_input_password"
                    android:layout_below="@+id/login_input_name"
                    android:layout_toRightOf="@+id/login_page_input_password"
                    android:background="@drawable/edit_text_x"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true" />
                
                
                <TextView
                    android:id="@+id/login_page_input_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_input_password"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="25.0dip"
                    android:paddingTop="10.0dip"
                    android:textColor="@color/black"
                    android:text="确认:" />

                <EditText
                    android:id="@+id/login_input_confirm_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/login_input_password"
                    android:layout_alignTop="@+id/login_page_input_confirm_password"
                    android:layout_below="@+id/login_input_password"
                    android:layout_toRightOf="@+id/login_page_input_confirm_password"
                    android:background="@drawable/edit_text_x"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true" />

                

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="145.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_input_confirm_password"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="35.0dip"
                    android:text="登录"
                    android:background="@drawable/android_big_button_x"
                    android:gravity="center"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />
                 

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="145.0dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_input_confirm_password"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="35.0dip"
                     android:background="@drawable/android_big_button_x"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/login_button"
                    android:text="注册"
                    android:textColor="#ff000000"
                    android:textSize="20.0sp" />

                <ProgressBar
                    android:id="@+id/RegisterprogressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_email"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true" />
              
            </RelativeLayout>
            
            <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="24sp">
        	</TextView>

            

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

