<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/HomeItem"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#dddddd"
        android:orientation="vertical" />
    <RelativeLayout
        android:id="@+id/homeLinearDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/titlebar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/listtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/listmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_alignParentRight="true"
                android:textSize="17sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/itemshow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/titlebar">
            <RelativeLayout
                android:id="@+id/item1"
                android:layout_width="0dp"
           		android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:layout_weight="1"
            	android:layout_margin="2sp">
            	<TextView
            	    android:id="@+id/item1text"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="超级棒的山地自行车，很好很好骑的"
            	    android:textSize="10sp"/>
            	<ImageView
            	    android:id="@+id/item1img"
            	    android:layout_width="100sp"
            	    android:layout_height="75sp"
            	    android:layout_below="@id/item1text"
            	    android:src="@drawable/bicycle"
            	    android:scaleType="fitCenter"/>
            	<TextView
            	    android:id="@+id/item1price"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="￥99.0"
            	    android:layout_below="@id/item1img"
            	    android:layout_alignParentRight="true"
            	    android:textColor="#ff0000"/>

            </RelativeLayout>
            <ImageView
            	    android:layout_width="wrap_content"
            	    android:layout_height="fill_parent"
            	    android:scaleType="centerCrop"
            	    android:src="@drawable/line" />
            <RelativeLayout
                android:id="@+id/item2"
                android:layout_width="0dp"
           		android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:layout_weight="1"
            	android:layout_margin="2sp">
            	<TextView
            	    android:id="@+id/item2text"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="超级棒的山地自行车，很好很好骑的"
            	    android:textSize="10sp"/>
            	<ImageView
            	    android:id="@+id/item2img"
            	    android:layout_below="@id/item2text"
            	    android:layout_width="100sp"
            	    android:layout_height="75sp"
            	    android:src="@drawable/bicycle"
            	    android:scaleType="fitCenter"/>
            	<TextView
            	    android:id="@+id/item2price"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="￥99.0"
            	    android:layout_below="@id/item2img"
            	    android:layout_alignParentRight="true"
            	    android:textColor="#ff0000"/>
            </RelativeLayout>
            <ImageView
            	    android:layout_width="wrap_content"
            	    android:layout_height="fill_parent"
            	    android:scaleType="centerCrop"
            	    android:src="@drawable/line" />
            <RelativeLayout
                android:id="@+id/item3"
                android:layout_width="0dp"
           		android:layout_height="wrap_content"
            	android:layout_gravity="center"
            	android:layout_weight="1"
            	android:layout_margin="2sp">
            	<TextView
            	    android:id="@+id/item3text"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="超级棒的山地自行车，很好很好骑的"
            	    android:textSize="10sp"/>
            	<ImageView
            	    android:id="@+id/item3img"
            	    android:layout_width="100sp"
            	    android:layout_height="75sp"
            	    android:layout_below="@id/item3text"
            	    android:src="@drawable/bicycle"
            	    android:scaleType="fitCenter"/>
            	<TextView
            	    android:id="@+id/item3price"
            	    android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"
            	    android:text="￥99.0"
            	    android:layout_below="@id/item3img"
            	    android:layout_alignParentRight="true"
            	    android:textColor="#ff0000"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
